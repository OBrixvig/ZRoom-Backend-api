@page
@model ZRoomBackendApi.Pages.EmailSenderModel
@{
    ViewData["Title"] = "Send Pinkode";
}

<h2>Send verifikationskode</h2>

<form method="post">
    <div class="form-group">
        <label for="RecipientEmail">Indtast din e-mailadresse:</label>
        <input asp-for="RecipientEmail" class="form-control" />
        <span asp-validation-for="RecipientEmail" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Send kode</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info mt-3">
        @Model.Message
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
