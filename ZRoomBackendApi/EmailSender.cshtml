@page
@model ZRoomBackendApi.Pages.EmailSenderModel
@{
    ViewData["Title"] = "Send Pinkode";
}

<h2>@ViewData["Title"]</h2> 

<form method="post" class="needs-validation" novalidate>
    
    <div class="form-group">
        <label asp-for="RecipientEmail" class="form-label">Indtast din e-mailadresse:</label>
        <input asp-for="RecipientEmail" class="form-control" required /> 
        <span asp-validation-for="RecipientEmail" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Send kode</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info mt-3" role="alert">
        @Model.Message
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
